<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel='stylesheet' href='/css/styles.css'>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Refunds | Supermarket App</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-light bg-white shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarAdminRefunds">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarAdminRefunds">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/inventory">Inventory</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/addProduct">Add Product</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/users">Users</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/deliveries">Deliveries</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/admin/refunds">Refunds</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <section class="page-section">
    <div class="container">
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
        <div>
          <p class="mb-1 text-muted">Administrator dashboard</p>
          <h2 class="mb-0">Refunds</h2>
        </div>
        <span class="badge bg-light text-dark px-3 py-2">Total refunds: <strong><%= refunds ? refunds.length : 0 %></strong></span>
      </div>

      <% if (messages && messages.length) { %>
        <% messages.forEach(function(message) { %>
          <div class="alert alert-success"><%= message %></div>
        <% }); %>
      <% } %>

      <% if (errors && errors.length) { %>
        <% errors.forEach(function(error) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% }); %>
      <% } %>

      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h5 class="card-title mb-3">Refund requests</h5>
          <% if (!refundRequests || !refundRequests.length) { %>
            <div class="empty-state">No refund requests yet.</div>
          <% } else { %>
            <div class="table-responsive">
              <table class="table align-middle mb-0">
                <thead>
                  <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Order</th>
                    <th scope="col">Customer</th>
                    <th scope="col">Requested</th>
                    <th scope="col">Reason</th>
                    <th scope="col">Status</th>
                    <th scope="col" class="text-end">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% refundRequests.forEach(function(request) { %>
                    <tr>
                      <td><%= new Date(request.created_at).toLocaleString() %></td>
                      <td>#<%= request.order_id %></td>
                      <td>
                        <div class="fw-semibold"><%= request.username %></div>
                        <div class="text-muted small"><%= request.email %></div>
                      </td>
                      <td>
                        <% if (request.requested_amount) { %>
                          $<%= Number(request.requested_amount).toFixed(2) %>
                        <% } else { %>
                          Full
                        <% } %>
                      </td>
                      <td><%= request.reason || '-' %></td>
                      <td class="text-uppercase"><%= request.status %></td>
                      <td class="text-end">
                        <div class="d-flex flex-column flex-md-row gap-2 justify-content-end">
                          <button class="btn btn-outline-success btn-sm approve-refund-btn" data-request-id="<%= request.id %>" <%= request.status !== 'requested' ? 'disabled' : '' %>>
                            Approve
                          </button>
                          <button class="btn btn-outline-secondary btn-sm deny-refund-btn" data-request-id="<%= request.id %>" <%= request.status !== 'requested' ? 'disabled' : '' %>>
                            Deny
                          </button>
                          <button class="btn btn-danger btn-sm refund-now-btn" data-order-id="<%= request.order_id %>" data-request-id="<%= request.id %>" <%= (request.status !== 'approved' || request.payment_method !== 'paypal' || !request.capture_reference) ? 'disabled' : '' %>>
                            Refund
                          </button>
                        </div>
                        <div class="mt-2">
                          <input type="number" step="0.01" min="0.01" class="form-control form-control-sm refund-amount-input" placeholder="Partial amount (optional)" data-request-id="<%= request.id %>">
                          <input type="text" class="form-control form-control-sm mt-2 admin-note-input" placeholder="Admin note (optional)" data-request-id="<%= request.id %>">
                        </div>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } %>
        </div>
      </div>

      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title mb-3">Refund history</h5>
          <% if (!refunds || !refunds.length) { %>
            <div class="empty-state">No refunds processed yet.</div>
          <% } else { %>
            <div class="table-responsive">
              <table class="table align-middle mb-0">
                <thead>
                  <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Order</th>
                    <th scope="col">Customer</th>
                    <th scope="col">Method</th>
                    <th scope="col">Status</th>
                    <th scope="col" class="text-end">Refunded</th>
                    <th scope="col" class="text-end">Order total</th>
                  </tr>
                </thead>
                <tbody>
                  <% refunds.forEach(function(refund) { %>
                    <tr>
                      <td><%= new Date(refund.created_at).toLocaleString() %></td>
                      <td>#<%= refund.order_id %></td>
                      <td>
                        <div class="fw-semibold"><%= refund.username %></div>
                        <div class="text-muted small"><%= refund.email %></div>
                      </td>
                      <td class="text-uppercase"><%= refund.method %></td>
                      <td><%= refund.status %></td>
                      <td class="text-end">$<%= Number(refund.amount || 0).toFixed(2) %></td>
                      <td class="text-end">$<%= Number(refund.order_total || 0).toFixed(2) %></td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </section>

  <footer class="footer">
    <div class="container">
      <small>&copy; <%= new Date().getFullYear() %> Supermarket App</small>
    </div>
  </footer>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      var approveButtons = document.querySelectorAll('.approve-refund-btn');
      var denyButtons = document.querySelectorAll('.deny-refund-btn');
      var refundButtons = document.querySelectorAll('.refund-now-btn');

      var getAdminNote = function (requestId) {
        var input = document.querySelector('.admin-note-input[data-request-id="' + requestId + '"]');
        return input ? input.value.trim() : '';
      };

      var getRefundAmount = function (requestId) {
        var input = document.querySelector('.refund-amount-input[data-request-id="' + requestId + '"]');
        return input && input.value ? input.value : null;
      };

      approveButtons.forEach(function (button) {
        button.addEventListener('click', function () {
          var requestId = this.getAttribute('data-request-id');
          fetch('/admin/refunds/' + requestId + '/approve', {
            method: 'post',
            headers: { 'content-type': 'application/json' },
            body: JSON.stringify({ adminNote: getAdminNote(requestId) })
          })
            .then(function (res) { return res.json(); })
            .then(function (data) {
              if (data && data.success) {
                window.location.reload();
              } else {
                alert((data && (data.error || data.message)) || 'Approve failed.');
              }
            })
            .catch(function (err) { alert(err.message || 'Approve failed.'); });
        });
      });

      denyButtons.forEach(function (button) {
        button.addEventListener('click', function () {
          var requestId = this.getAttribute('data-request-id');
          fetch('/admin/refunds/' + requestId + '/deny', {
            method: 'post',
            headers: { 'content-type': 'application/json' },
            body: JSON.stringify({ adminNote: getAdminNote(requestId) })
          })
            .then(function (res) { return res.json(); })
            .then(function (data) {
              if (data && data.success) {
                window.location.reload();
              } else {
                alert((data && (data.error || data.message)) || 'Deny failed.');
              }
            })
            .catch(function (err) { alert(err.message || 'Deny failed.'); });
        });
      });

      refundButtons.forEach(function (button) {
        button.addEventListener('click', function () {
          var requestId = this.getAttribute('data-request-id');
          var orderId = this.getAttribute('data-order-id');
          var amount = getRefundAmount(requestId);

          fetch('/api/paypal/refund', {
            method: 'post',
            headers: { 'content-type': 'application/json' },
            body: JSON.stringify({
              orderId: Number(orderId),
              amount: amount,
              refundRequestId: Number(requestId),
              adminNote: getAdminNote(requestId)
            })
          })
            .then(function (res) { return res.json(); })
            .then(function (data) {
              if (data && data.success) {
                window.location.reload();
              } else {
                var message = (data && (data.error || data.message)) || 'Refund failed.';
                if (data && data.debugId) {
                  message += '\nDebug ID: ' + data.debugId;
                }
                alert(message);
              }
            })
            .catch(function (err) { alert(err.message || 'Refund failed.'); });
        });
      });
    });
  </script>
</body>
</html>
